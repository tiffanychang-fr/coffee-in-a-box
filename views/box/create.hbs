<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Box</title>
  </head>
  <body>

    {{! Navbar: Admin Access }}
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Coffee In A Box</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link"
                href="/subscription/presentation"
              >💌SUBSCRIPTION</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/box">🎁OUR PREVIOUS BOXES</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    {{! Main Section }}
    <form action="/box/create" method="POST">
      <label>
        Title
        <input type="text" name="title" />
      </label>
      <label>
        Description
        <input type="text" name="description" />
      </label>
      <label>
        Release Month
        <input type="text" name="releaseMonth" />
      </label>
      <label>
        Release Year
        <input type="text" name="releaseYear" />
      </label>
      <label>
        Image URL
        <input type="text" name="imageUrl" />
      </label>

      <button type="submit">Create Box</button>
    </form>

    <br />
    <a href="/box">🔙Go Back</a>

    {{#if errorMessage}}
      {{errorMessage}}
    {{/if}}
  </body>
</html>