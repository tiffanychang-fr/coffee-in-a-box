<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Our Boxes | Coffee In A Box</title>
  </head>
  <body>

    {{! Navbar }}
    <nav class="navbar navbar-expand-lg px-5 py-3 mx-auto text-dark">
      <div class="container-fluid">
        <div class="brand">
          <a class="navbar-brand pr-5 mr-5" href="/"><img class="brand-logo" src="/images/coffee-logo.png" alt="brand-logo">Coffee In A Box</a>
        </div>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mb-2 mb-lg-0 pl-5 ml-5">
            <li class="nav-item mx-1">
              <a class="nav-link" href="/subscription/presentation">SUBSCRIPTION</a>
            </li>
            <li class="nav-item mx-1">
              <a class="nav-link" href="/box">OUR PREVIOUS BOXES</a>
            </li>
            {{#if session.userId}}
              <li class="nav-item mx-1">
                <a class="nav-link" href="/account/dashboard">MY ACCOUNT</a>
              </li>
              <li class="nav-item mx-1">
                <a class="nav-link" href="/auth/logout">LOGOUT</a>
              </li>

            {{else}}
              <li class="nav-item mx-1">
                <a class="nav-link" href="/auth/signup">SIGNUP</a>
              </li>
              <li class="nav-item mx-1">
                <a class="nav-link" href="/auth/login">LOGIN</a>
              </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>

    {{! Main Section}}

    <div class="container">
      {{#if session.isAdmin}}
      <br/>
      <a href="/box/create">âž•CREATE A NEW BOX</a>
      {{/if}}

      <div class="row justify-content-around">
        {{#each boxes}}
          <div class="col-md-4 mt-5">
            <div class="card">
              <img src="{{imageUrl}}" />
              <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <div class="card-text">{{releaseMonth}}-{{releaseYear}}</div>
                <a href="/box/{{_id}}">MORE DETAILS</a>
                {{#if ../session.isAdmin}}
                  <br />
                  <a href="/box/update/{{_id}}">EDIT</a>
                  <a href="/box/delete/{{_id}}">| DELETE</a>
                {{else}}
                {{/if}}
              </div>
            </div>
          </div>
        {{/each}}

      </div>
    </div>
    <footer>&copy; Coffee In A Box | 2022</footer>
  </body>
</html>